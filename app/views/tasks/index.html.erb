<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-sm-3">
    <div id="task-form" style="display:none"></div>
    <%= link_to new_task_path, remote: true do %>
      <button class="btn btn-default add-btn"><span class="glyphicon glyphicon-plus"></span> Add Task </button>
    <% end %>
  </div>
  <div class="col-sm-8 col-sm-offset-1">
    <h1>Listing Tasks</h1>
    <div id="tasks">
      <div class="row">
        <%= render @tasks %>
      </div>
    </div>
  </div>
</div>
